<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_general"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_title"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_product1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 1"/>

            <TextView
                android:id="@+id/tv_count_product1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_count_placeholder"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_product2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 2"/>

            <TextView
                android:id="@+id/tv_count_product2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_count_placeholder"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_product3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 3"/>

            <TextView
                android:id="@+id/tv_count_product3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_count_placeholder"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_product4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 4"/>

            <TextView
                android:id="@+id/tv_count_product4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_count_placeholder"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_product5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 5"/>

            <TextView
                android:id="@+id/tv_count_product5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_count_placeholder"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_product6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 6"/>

            <TextView
                android:id="@+id/tv_count_product6"
